    monitor:
      type: string
      description: provides current asset location & duration and distance of the current leg
      required:
        - lat
        - lon
        - duration
        - distance
      properties:
        lat:
          $ref: '#/components/schemas/lat'
        lon:
          $ref: '#/components/schemas/lon'
        duration:
          $ref: '#/components/schemas/duration'
        distance:
          $ref: '#/components/schemas/distance'
